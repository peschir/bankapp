# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Home page
GET         /                                     controllers.Application.index()

GET        /rest/account         controllers.Application.findAccount(googleId: String)

GET        /rest/balances        controllers.Application.findBalances(name_enc: String ?= "", sort: String ?= "id", direction: String ?= "asc", items: Int ?=10, page: Int ?=1)

GET        /rest/stocks          controllers.Application.findStocks(name_enc: String ?= "", date: Long ?= -1, sort: String ?= "id", direction: String ?= "asc", items: Int ?=10, page: Int ?=1)
# Map static resources from the /public folder to the /assets URL path
GET         /*file                         controllers.Assets.at(path="/public", file)

