# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Home page
GET         /                                     controllers.Application.index()

GET         /assets/rest/balances                 controllers.Application.findBalances(name: String ?= "", sort: String ?= "id", direction: String ?= "asc", items: Int ?=10, page: Int ?=1)

GET         /assets/rest/stocks                   controllers.Application.findStocks(name: String ?= "", date: Long ?= -1, sort: String ?= "id", direction: String ?= "asc", items: Int ?=10, page: Int ?=1)
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                         controllers.Assets.at(path="/public", file)

